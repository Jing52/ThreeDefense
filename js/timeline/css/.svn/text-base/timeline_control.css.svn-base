.timeline{position: absolute;bottom: 5px;left:15px;width: 100%;height: 60px; left: 0px;background: rgba(0,0,0,.36);}
.progress{position:relative;top:10px; left: 2%; z-index:7;margin: 0 auto; width: 88%; border-radius:10px;height: 17px; border: 1px solid #fff;margin-top: 3px;}
ul{list-style: none;}

.progress-bar{z-index:8;width: 100%;height: 100%; transition: none; -webkit-box-shadow: 0 0 1px 1px rgba(0, 0, 0, 0.25), inset 0 1px rgba(255, 255, 255, 0.1); box-shadow: 0 0 1px 1px rgba(0, 0, 0, 0.25), inset 0 1px rgba(255, 255, 255, 0.1); border-radius:15px; background: #0e4597; border: none !important;}

.progress-bar:before, .progress-bar:after { content: ''; position: absolute; top: 0; left: 0; right: 0;}
.progress-bar:before { bottom: 0; border-radius: 4px 4px 4px 4px;}

