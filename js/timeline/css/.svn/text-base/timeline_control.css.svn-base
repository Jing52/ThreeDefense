.marker{z-index:10;width:20px;height:20px;background: url(../images/2.png) right no-repeat;background-size:100%;cursor: move;position: absolute;top:11px; left: 88px;}

.timeline-scale-container{z-index: 9;position: absolute;top:0px;width: 100%;}

.timeline-scale {
    padding: 0;
    list-style: none;
    background-repeat: repeat-x;
    margin: 0 auto; 
    width: 96%;
    /*margin-left: 10px !important;*/
    margin-top: 3px;
}

.timeline-scale li {
    font-family:Arial, "Microsoft YaHei", 微软雅黑, "WenQuanYi Micro Hei", 文泉驿微米黑, STXihei, 华文细黑, sans-serif;
    display: inline-block;
    width: 4.15% !important;
    margin: 0;
    padding: 1.3rem 0 0 0;
    list-style: none;
    cursor: pointer;
    text-align: center;
    color: #fff;
    font-size:13px;
    *display: inline;
    *zoom: 1
}
@media only screen and (min-width: 1920px) {
	.timeline-scale li {padding: 1rem 0 0 0;}
}
.time-player {
    z-index: 12;
    position: absolute;
    top: 8px;
    left: 3.5%;
}
.time-player span{
    display: inline-block;
    width: 33px;
    height: 33px;
    cursor: pointer;
    background: url(../images/play2.png)  no-repeat;
    background-size: 100%;

}
